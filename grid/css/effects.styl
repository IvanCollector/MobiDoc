.steel-bg-eff
    position relative
    bottom 0 
    border: 1px solid #555555
    background-color: #cfd1d5
    box-shadow: inset 0 1px rgba(255,255,255,.43), 0 -2px 5px rgba(0,0,0, .06)

    &:after
        content  ''
        position absolute
        z-index 0
        top:0
        left 0
        width 100%
        height 100%
        background: -moz-linear-gradient(top,  rgba(255,255,255,0.21) 0%, rgba(95,100,111,0.21) 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0.21)), color-stop(100%,rgba(95,100,111,0.21))); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  rgba(255,255,255,0.21) 0%,rgba(95,100,111,0.21) 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  rgba(255,255,255,0.21) 0%,rgba(95,100,111,0.21) 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  rgba(255,255,255,0.21) 0%,rgba(95,100,111,0.21) 100%); /* IE10+ */
        background: linear-gradient(to bottom,  rgba(255,255,255,0.21) 0%,rgba(95,100,111,0.21) 100%); /* W3C */
        @css{filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#36ffffff', endColorstr='#365f646f',GradientType=0 ); /* IE6-9 */}
