@import 'colors.styl'
@import 'shapes.styl'
body
     background #334E96 //url('/ui-kit/i/bg.png') no-repeat left top
     // background-size: cover
     overflow scroll II

*
     -webkit-box-sizing: border-box
        -moz-box-sizing: border-box
             box-sizing: border-box

controlsBtnSize = 20px

.k-wbg-gm
     background-color white
     padding 20*PX
     border-radius 2*PX
     
.source-code-be
     rect 100%
     position: absolute
     overflow: scroll

.k-controls-b
     position fixed
     z-index 10
     height 50%
     width 50%
     right -50%
     // right 0
     top 0
     background-color rgba(0,0,0,.9)
     transition: right  .25s ease-out;

     &.is-open
          right 0

     .btn-be
          width controlsBtnSize
          height 100%
          background-color rgba(0,0,0,.4)
          cursor pointer
          position absolute
          left - controlsBtnSize

          &:after
               content ''
               width: 0
               height: 0
               border-top: 6px solid transparent
               border-bottom: 6px solid transparent
               border-right: 6px solid rgba(0,0,0,.5)
               position: absolute
               top: 50%
               left 50%
               margin-top -3px
               margin-left -3px

          &.is-open
               &:after
                    content ''
                    width: 0
                    height: 0
                    border-top: 6px solid transparent
                    border-bottom: 6px solid transparent
                    border-left: 6px  solid rgba(0,0,0,.5)
                    border-right: 6px  solid transparent
                    position: absolute
                    top: 50%
                    left 50%
                    margin-top -3px
                    margin-left -3px

                &:hover
                    &:after
                         border-left-color white
                         border-right-color transparent

          &:hover
               background-color rgba(0,0,0,.9)
               
               &:after
                    border-right-color white

     pre.prettyprint
          position: absolute
          padding 50px 50px
          font-size .8em
          top 0 
          left 0


.k-color-sample-e
     width 75px
     height 75px
     text-align center
     line-height 50px
     font-size 10px
     color #f8f8f8

.k-try-b
     height 400px

.k-try-be, .k-try-result-be
     width 49%
     height 100%
     display block
     margin 0 
     padding 10px
     float: left
     box-sizing: border-box
     resize none

.k-try-be
     outline 0
     border 0
          background-color #48ada3

     &:focus
          background-color #48ada3
          color white

.k-try-result-be
     float right

.k-btn
     background-color rgba(0,0,0,.4)
     padding 15px 0
     color white
     clear both
     text-align center
     cursor pointer
     font-weight bold

     &:hover 
          background-color rgba(0,0,0,.2)


.icon-sample-l
     width 180px

#section, .section-header
     padding 0 10%

.section-header
     background-color rgba(0,0,0,.4)
     padding 5px 10% 10px 10%

#section
     padding 30px 10% 50px 10%

.hash
     color: rgba(255,255,255,.3)
     font-weight normal
     margin 20px 0 5px 0
     font-size 0.65em

     &:hover
          color:white

@css{
/* Pretty printing styles. Used with prettify.js. */
/* Vim sunburst theme by David Leibovic */

      .str, code .str {
          color: #e6db74;
     }
     /* string  - green */
      .kwd, code .kwd {
          color: #66d9ef;
     }
     /* keyword - dark pink */
      .com, code .com {
          color: #aeaeae;
     }
     
     .typ,
     code .typ {
          color: #89bdff;
     }
     /* type - light blue */
      .lit, code .lit {
          color: #ae81ff;
     }
     /* literal - blue */
     pre .pun,
     code .pun {
          color: #fff;
     }
     /* punctuation - white */
     pre .pln,
     code .pln {
          color: #fff;
     }
     /* plaintext - white */
     pre .tag, code .tag {
          color: #f92772;
     }
      .atn, code .atn {
          color: #a6e22d;
     }
      .atv, code .atv{
          color: #e6db74;
     }
      .dec, code .dec{
          color: #3387cc;
     }
     /* decimal - blue */
     .prettyprint, code.prettyprint {
          text-align: left;
          /*width: 60% !important;*/
          white-space: pre#text-wrap;
          /* css-3 */
          white-space: -moz-pre#text-wrap;
          /* Mozilla, since 1999 */
          white-space: -pre#text-wrap;
          /* Opera 4-6 */
          white-space: -o-pre#text-wrap;
          /* Opera 7 */
          word-wrap: break-word;
          /* Internet Explorer 5.5+ */
          font-size: 1em;
     }
     /* Specify class=linenums on a pre#text to get line numbering */
     ol.linenums {
          /*margin-top: 0;*/
          /*margin-bottom: 0;*/
          color: #aeaeae;
     }

     @media print {
     pre .str, code .str { color: #060; }
     pre .kwd, code .kwd { color: #006; font-weight: bold; }
     pre .com, code .com { color: #600; font-style: italic; }
     pre .typ, code .typ { color: #404; font-weight: bold; }
     pre .lit, code .lit { color: #044; }
     pre .pun, code .pun { color: #440; }
     pre .pln, code .pln { color: #000; }
     pre .tag, code .tag { color: #006; font-weight: bold; }
     pre .atn, code .atn { color: #404; }
     pre .atv, code .atv { color: #060; }
     }
}